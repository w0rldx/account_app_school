<Page x:Class="KontoVerwaltungV4.Pages.DeleteKonto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="DeleteKonto">

    <WrapPanel Orientation="Vertical">
        <TextBlock Margin="2" Text="KontoNummer:" />
        <TextBox Margin="2" Name="KontoNummerTextbox" Width="230" HorizontalAlignment="Left" />

        <TextBlock Margin="2,10,2,2" Text="Pin:" />
        <PasswordBox Margin="2" Name="PinTextbox" Width="230" HorizontalAlignment="Left" />

        <Button Name="DeleteButton" Margin="2,10,2,2" Width="230" HorizontalAlignment="Left" Content="Löschen"
                Click="DeleteButton_OnClick" />
    </WrapPanel>
</Page>